<fieldset>
  <legend><%= I18n.t('redmica_ui_extension.searchable_selectbox.name') %></legend>
  <p>
    <%= label_tag('settings[searchable_selectbox][enabled]', I18n.t('redmica_ui_extension.searchable_selectbox.label_enable')) %>
    <%= hidden_field_tag 'settings[searchable_selectbox][enabled]', 0 %>
    <%= check_box_tag('settings[searchable_selectbox][enabled]', 1, Setting.enabled_redmica_ui_extension_feature?('searchable_selectbox'), data: {enables: '.enabled_multiple_selectbox'}) %>
  </p>
  <p>
    <%= label_tag('settings[searchable_selectbox][enabled_multiple_selectbox]', I18n.t('redmica_ui_extension.searchable_selectbox.label_enable_multiple_selectbox')) %>
    <%= hidden_field_tag 'settings[searchable_selectbox][enabled_multiple_selectbox]', 0, class: 'enabled_multiple_selectbox' %>
    <%= check_box_tag('settings[searchable_selectbox][enabled_multiple_selectbox]', 1, Setting.plugin_redmica_ui_extension['searchable_selectbox'].to_h['enabled_multiple_selectbox'] == '1', class: 'enabled_multiple_selectbox') %>
  </p>
</fieldset>

